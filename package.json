{
  "name": "alcaldiacuajimalpa",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names=\"BACKEND,FRONTEND\" --prefix-colors=\"blue,green\" \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "cd backend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "install:all": "bun install && cd backend && bun install && cd ../frontend && bun install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist",
    "start": "concurrently --kill-others-on-fail --names=\"BACKEND,FRONTEND\" --prefix-colors=\"blue,green\" \"bun run start:backend\" \"bun run start:frontend\"",
    "start:backend": "cd backend && bun run start",
    "start:frontend": "cd frontend && bun run serve"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}